{
  "name": "allheartz_api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "author": "Kirill Perepelitsa <kirillp@topflightapps.com>",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && ts-node-dev --respawn src/server.ts",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "build": "tsc",
    "lint": "./node_modules/.bin/eslint ./src/app.ts",
    "postinstall": "npm run build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/db/ormconfig.ts",
    "db:migration:create": "npm run typeorm migration:create -- -n",
    "db:migrate:up": "npm run typeorm migration:run",
    "db:migrate:down": "npm run typeorm migration:revert",
    "db:migrate:sync": "npm run typeorm migration:generate -- -n"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/require-directory": "^2.1.2",
    "body-parser": "^1.19.1",
    "change-case": "^4.1.2",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "require-directory": "^2.1.1",
    "typeorm": "^0.2.41",
    "yup": "^0.32.11"
  },
  "_moduleAliases": {
    "types": "dist/types/types.js",
    "common": "dist",
    "db": "dist/db",
    "validation": "dist/validation",
    "controllers": "dist/controllers",
    "config": "dist/config",
    "middlewares": "dist/middlewares"
  }
}
